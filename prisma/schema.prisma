generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  userId   Int    @id @default(autoincrement())
  email    String @unique
  password String
  username String @unique
  lists     List[]
}

model List {
  id       Int      @id @default(autoincrement())
  title    String
  status   Boolean
  items    String[] //@unique
  listUser User     @relation(fields: [listUserId], references: [userId])
  listUserId Int
}

